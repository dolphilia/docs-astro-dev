---
// スタイルシートのインポート方法を修正
import { Navigation, Footer } from '@docs/ui/components';
import LanguageSelector from '../components/LanguageSelector.astro';
import '../styles/global.css';

interface Props {
  title: string;
  lang: string;
  version?: string;
}

const { title, lang, version = 'v1' } = Astro.props;
// GitHub Pagesのベースパス
const baseUrl = '/docs-astro';

// ナビゲーションアイテムの定義
const navItems = [
  { title: 'Home', href: `${baseUrl}/${lang}` },
  { title: 'Docs', href: `${baseUrl}/${lang}/${version}/guide/getting-started` },
  { title: 'API', href: `${baseUrl}/${lang}/${version}/api` },
];

// フッターリンクグループの定義
const linkGroups = [
  {
    title: 'Docs',
    links: [
      { title: 'Getting Started', href: `${baseUrl}/${lang}/${version}/guide/getting-started` },
      { title: 'API Reference', href: `${baseUrl}/${lang}/${version}/api` }
    ]
  },
  {
    title: 'Community',
    links: [
      { title: 'GitHub', href: 'https://github.com' },
      { title: 'Discord', href: 'https://discord.com' }
    ]
  }
];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Docs</title>
    
    <!-- スタイルシートを動的に読み込み -->
    <style is:global>
      /* 最小限のスタイル定義（CSSがロードされるまでの間表示されます） */
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <Navigation items={navItems} />
          <LanguageSelector currentLang={lang} />
        </div>
      </div>
    </header>
    
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    
    <Footer 
      linkGroups={linkGroups}
      copyright={`© ${new Date().getFullYear()} Docs Astro. All rights reserved.`}
    />
  </body>
</html>
