---
import '../styles/global.css';
import { Navigation, Footer } from '@docs/ui/components';
import LanguageSelector from '../components/LanguageSelector.astro';

interface Props {
  title: string;
  lang: string;
  version?: string;
}

const { title, lang, version = 'v1' } = Astro.props;

// ナビゲーションアイテムの定義
const navItems = [
  { title: 'Home', href: `/${lang}` },
  { title: 'Docs', href: `/${lang}/${version}/guide/getting-started` },
  { title: 'API', href: `/${lang}/${version}/api` },
];

// フッターリンクグループの定義
const linkGroups = [
  {
    title: 'Docs',
    links: [
      { title: 'Getting Started', href: `/${lang}/${version}/guide/getting-started` },
      { title: 'API Reference', href: `/${lang}/${version}/api` }
    ]
  },
  {
    title: 'Community',
    links: [
      { title: 'GitHub', href: 'https://github.com' },
      { title: 'Discord', href: 'https://discord.com' }
    ]
  }
];
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Docs</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <Navigation items={navItems} />
          <LanguageSelector currentLang={lang} />
        </div>
      </div>
    </header>
    
    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>
    
    <Footer 
      linkGroups={linkGroups}
      copyright={`© ${new Date().getFullYear()} Docs Astro. All rights reserved.`}
    />
  </body>
</html>
