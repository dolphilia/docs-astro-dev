---
// Types
interface Link {
  title: string;
  href: string;
  ariaLabel?: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  copyright?: string;
  linkGroups?: LinkGroup[];
  class?: string;
}

// Props with defaults
const {
  copyright = `Â© ${new Date().getFullYear()} Your Company. All rights reserved.`,
  linkGroups = [],
  class: className = '',
} = Astro.props;

// Constants
const FOOTER_BASE_CLASSES = 'footer p-10 bg-base-200 text-base-content';
---

<footer 
  class:list={[FOOTER_BASE_CLASSES, className]}
  role="contentinfo"
>
  <div class="footer-content">
    <div class="brand-section">
      <slot name="logo" />
      <p class="copyright">{copyright}</p>
      <div class="social-links flex space-x-4 mt-4">
        <slot name="social-links" />
      </div>
    </div>
    
    {linkGroups.map((group) => (
      <nav class="link-group" aria-labelledby={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}>
        <h6 
          class="footer-title" 
          id={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}
        >
          {group.title}
        </h6>
        <ul class="link-list">
          {group.links.map((link) => (
            <li>
              <a 
                href={link.href} 
                class="link link-hover"
                aria-label={link.ariaLabel || link.title}
              >
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    ))}
  </div>
</footer>

<style>
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
</style>
