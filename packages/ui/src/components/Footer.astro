---
interface Link {
  title: string;
  href: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  copyright?: string;
  linkGroups?: LinkGroup[];
  class?: string;
}

const {
  copyright = `Â© ${new Date().getFullYear()} Your Company. All rights reserved.`,
  linkGroups = [],
  class: className = '',
} = Astro.props;
---

<footer class:list={['footer p-10 bg-base-200 text-base-content', className]}>
  <div>
    <slot name="logo" />
    <p>{copyright}</p>
    <div class="flex space-x-4 mt-4">
      <slot name="social-links" />
    </div>
  </div>
  
  {linkGroups.map((group) => (
    <nav>
      <h6 class="footer-title">{group.title}</h6>
      {group.links.map((link) => (
        <a href={link.href} class="link link-hover">{link.title}</a>
      ))}
    </nav>
  ))}
</footer>
