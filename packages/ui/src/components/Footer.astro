---
// Types
interface Link {
  title: string;
  href: string;
  ariaLabel?: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  copyright?: string;
  linkGroups?: LinkGroup[];
  class?: string;
}

// Props with defaults
const {
  copyright = `Â© ${new Date().getFullYear()} Your Company. All rights reserved.`,
  linkGroups = [],
  class: className = '',
} = Astro.props;
---

<footer 
  class:list={['bg-gray-100 py-10 px-4', className]}
  role="contentinfo"
>
  <div class="footer-content max-w-7xl mx-auto">
    <div class="brand-section">
      <slot name="logo" />
      <p class="text-gray-600 mt-2">{copyright}</p>
      <div class="social-links flex space-x-4 mt-4">
        <slot name="social-links" />
      </div>
    </div>
    
    {linkGroups.map((group) => (
      <nav class="link-group" aria-labelledby={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}>
        <h6 
          class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-4" 
          id={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}
        >
          {group.title}
        </h6>
        <ul class="link-list">
          {group.links.map((link) => (
            <li class="mb-2">
              <a 
                href={link.href} 
                class="text-gray-600 hover:text-gray-900 transition-colors"
                aria-label={link.ariaLabel || link.title}
              >
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    ))}
  </div>
</footer>

<style>
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
</style>
