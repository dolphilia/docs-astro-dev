---
// Types
interface Link {
  title: string;
  href: string;
  ariaLabel?: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  copyright?: string;
  linkGroups?: LinkGroup[];
  class?: string;
}

// Props with defaults
const {
  copyright = `Â© ${new Date().getFullYear()} Your Company. All rights reserved.`,
  linkGroups = [],
  class: className = '',
} = Astro.props;
---

<footer 
  class:list={['footer', className]}
  role="contentinfo"
>
  <div class="footer-content">
    <div class="brand-section">
      <slot name="logo" />
      <p class="copyright">{copyright}</p>
      <div class="social-links">
        <slot name="social-links" />
      </div>
    </div>
    
    {linkGroups.map((group) => (
      <nav class="link-group" aria-labelledby={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}>
        <h6 
          class="group-title" 
          id={`footer-${group.title.toLowerCase().replace(/\s+/g, '-')}`}
        >
          {group.title}
        </h6>
        <ul class="link-list">
          {group.links.map((link) => (
            <li class="link-item">
              <a 
                href={link.href} 
                class="link"
                aria-label={link.ariaLabel || link.title}
              >
                {link.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    ))}
  </div>
</footer>

<style>
  .footer {
    background-color: #f3f4f6;
    padding: 2.5rem 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .copyright {
    color: #4b5563;
    margin-top: 0.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .group-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #111827;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .link-item {
    margin-bottom: 0.5rem;
  }

  .link {
    color: #4b5563;
    transition: color 0.2s;
  }

  .link:hover {
    color: #111827;
  }
</style>
