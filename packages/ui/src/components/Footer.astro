---
/**
 * フッターコンポーネント - Starlightスタイルに基づいたフッター
 */
interface Link {
  title: string;
  href: string;
  target?: string;
  rel?: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  linkGroups?: LinkGroup[];
  copyright?: string;
  class?: string;
}

const { linkGroups = [], copyright = '', class: className = '' } = Astro.props;
---

<footer class:list={['footer', className]}>
  <div class="footer-container">
    <div class="footer-content">
      {linkGroups.length > 0 && (
        <div class="footer-links">
          {linkGroups.map((group) => (
            <div class="footer-group">
              <h3 class="group-title">{group.title}</h3>
              <ul class="group-links">
                {group.links.map((link) => (
                  <li>
                    <a 
                      href={link.href} 
                      target={link.target} 
                      rel={link.rel}
                      class="footer-link"
                    >
                      {link.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      )}
      
      <div class="footer-bottom">
        {copyright && <p class="copyright">{copyright}</p>}
      </div>
    </div>
  </div>
</footer>

<style>
  /* Starlightスタイルに基づくフッタースタイル */
  .footer {
    background-color: var(--sl-color-bg-nav);
    border-top: 1px solid var(--sl-color-hairline);
    padding: 3rem 0;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: var(--sl-content-width);
    margin: 0 auto;
    padding: 0 var(--sl-content-pad-x);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .group-title {
    font-size: var(--sl-text-sm);
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--sl-color-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .group-links {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: var(--sl-text-xs);
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: var(--sl-color-white);
    text-decoration: underline;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px solid var(--sl-color-hairline-light);
  }

  .copyright {
    color: var(--sl-color-gray-3);
    font-size: var(--sl-text-xs);
  }

  @media (min-width: 50em) {
    .footer-links {
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    }
  }
</style>
