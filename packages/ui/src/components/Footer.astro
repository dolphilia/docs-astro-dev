---
interface Link {
  title: string;
  href: string;
}

interface LinkGroup {
  title: string;
  links: Link[];
}

interface Props {
  copyright?: string;
  linkGroups?: LinkGroup[];
  class?: string;
}

const {
  copyright = `Â© ${new Date().getFullYear()} Your Company. All rights reserved.`,
  linkGroups = [],
  class: className = '',
} = Astro.props;
---

<footer class:list={['bg-gray-50 border-t', className]}>
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="xl:grid xl:grid-cols-3 xl:gap-8">
      <div class="space-y-8 xl:col-span-1">
        <slot name="logo" />
        <p class="text-gray-500 text-sm">
          {copyright}
        </p>
        <div class="flex space-x-6">
          <slot name="social-links" />
        </div>
      </div>
      <div class="mt-12 grid grid-cols-2 gap-8 xl:col-span-2 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          {
            linkGroups.slice(0, 2).map((group) => (
              <div class="mt-12 md:mt-0">
                <h3 class="text-sm font-semibold text-gray-900">{group.title}</h3>
                <ul class="mt-4 space-y-4">
                  {group.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-sm text-gray-600 hover:text-gray-900"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          {
            linkGroups.slice(2, 4).map((group) => (
              <div class="mt-12 md:mt-0">
                <h3 class="text-sm font-semibold text-gray-900">{group.title}</h3>
                <ul class="mt-4 space-y-4">
                  {group.links.map((link) => (
                    <li>
                      <a
                        href={link.href}
                        class="text-sm text-gray-600 hover:text-gray-900"
                      >
                        {link.title}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</footer>
