---
/**
 * フッターコンポーネント - Starlightスタイルに基づいたフッター
 * 改善: ソーシャルアイコンのサポート、レスポンシブデザインの強化、スティッキーフッターオプション
 */
import Icon from './icons/Icon.astro';
import { Pagination } from './index';


interface SocialLink {
  label: string;
  href: string;
  icon: string;
}

interface Props {
  copyright?: string;
  socialLinks?: SocialLink[];
  showPagination?: boolean;
  prevPage?: { title: string; url: string };
  nextPage?: { title: string; url: string };
  sticky?: boolean;
  class?: string;
}

const { 
  copyright = '', 
  socialLinks = [],
  showPagination = false,
  prevPage,
  nextPage,
  sticky = false,
  class: className = '' 
} = Astro.props;
---

<footer class:list={['footer', className, { 'footer-sticky': sticky }]}>
  <div class="footer-container">
    <div class="footer-content">
      {showPagination && <Pagination prev={prevPage} next={nextPage} />}
      
      
      <div class="footer-bottom">
        <div class="footer-meta">
          {copyright && <p class="copyright">{copyright}</p>}
        </div>
        
        {socialLinks.length > 0 && (
          <div class="social-links">
            {socialLinks.map(({ label, href, icon }) => (
              <a href={href} rel="me" class="social-link" aria-label={label} title={label}>
                <Icon name={icon as any} />
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</footer>

<style>
  /* Starlightスタイルに基づくフッタースタイル - 改善版 */
  .footer {
    background-color: var(--sl-color-bg-nav);
    border-top: 1px solid var(--sl-color-hairline);
    padding: 3rem 0;
    margin-top: 4rem;
  }

  .footer-sticky {
    position: sticky;
    bottom: 0;
    z-index: 10;
  }

  .footer-container {
    max-width: 87.5rem; /* 1400px */
    margin: 0 auto;
    padding: 0 1.5rem;
    box-sizing: border-box;
  }
  
  @media (min-width: 50em) {
    .footer-container {
      padding: 0 2rem;
    }
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }


  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--sl-color-hairline-light);
  }

  .footer-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .copyright {
    color: var(--sl-color-gray-3);
    font-size: var(--sl-text-xs);
    margin: 0;
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .social-link {
    color: var(--sl-color-text-accent);
    padding: 0.5em;
    margin: -0.5em;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.2s;
  }

  .social-link:hover {
    opacity: 0.66;
  }

  @media (min-width: 50em) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .footer-meta {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      gap: 3rem;
    }
  }
</style>
