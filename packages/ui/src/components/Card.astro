---
interface Props {
  title?: string;
  class?: string;
  variant?: 'default' | 'bordered' | 'image';
  [key: string]: any;
}

const { title, class: className = '', variant = 'default', ...rest } = Astro.props;

const variantStyles = {
  default: '',
  bordered: 'border border-gray-200',
  image: 'relative overflow-hidden',
};

const classes = [
  'rounded-lg overflow-hidden bg-white shadow-md',
  variantStyles[variant],
  className
];
---

<div class:list={classes} {...rest}>
  <div class="p-5">
    {title && <h2 class="text-xl font-semibold mb-3">{title}</h2>}
    <div class="text-gray-700">
      <slot />
    </div>
    {Astro.slots.has('footer') && (
      <div class="mt-4 flex justify-end">
        <slot name="footer" />
      </div>
    )}
  </div>
</div>
