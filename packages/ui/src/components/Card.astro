---
interface Props {
  title?: string;
  class?: string;
  [key: string]: any;
}

const { title, class: className = '', ...rest } = Astro.props;
---

<div class:list={['rounded-lg border bg-white shadow-sm', className]} {...rest}>
  {title && (
    <div class="border-b px-4 py-3">
      <h3 class="text-lg font-semibold">{title}</h3>
    </div>
  )}
  <div class="p-4">
    <slot />
  </div>
  {Astro.slots.has('footer') && (
    <div class="border-t bg-gray-50 px-4 py-3">
      <slot name="footer" />
    </div>
  )}
</div>
