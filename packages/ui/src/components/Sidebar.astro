---
// Sidebar.astro
interface SidebarItem {
  title: string;
  href?: string;
  items?: SidebarItem[];
}

interface Props {
  items: SidebarItem[];
  title?: string;
  class?: string;
}
const { items, title, class: className = '' } = Astro.props;
---

<aside class:list={['w-64 shrink-0', className]}>
  {title && <h3 class="mb-3 font-semibold text-lg">{title}</h3>}
  <nav>
    <ul class="menu bg-base-200 w-full rounded-box">
      {items.map(section => (
        <li>
          {section.title && (
            <h4 class="menu-title">{section.title}</h4>
          )}
          {section.items && (
            <ul>
              {section.items.map(item => (
                <li>
                  <a href={item.href}>
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>
</aside>
