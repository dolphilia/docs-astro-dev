---
// Sidebar.astro - simplified but with items prop
interface SidebarItem { // 元の SidebarItem 定義を（簡略化して）戻す
  title: string;
  href?: string;
  children?: SidebarItem[];
}

interface Props {
  items: SidebarItem[]; // items プロパティを戻す
  title?: string;
  class?: string; // class プロパティも戻しておく
}
const { items, title, class: className = '' } = Astro.props; // items, className を受け取る
---

<aside class:list={['w-64 shrink-0', className]}>
  {title && <h3 class="mb-3 font-semibold text-lg">{title}</h3>}
  <nav>
    <ul>
      <li><a href="/test1">Test Link 1</a></li>
      <li><a href="/test2">Test Link 2</a></li>
    </ul>
  </nav>
</aside>
