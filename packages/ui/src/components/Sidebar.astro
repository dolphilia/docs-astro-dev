---
// Sidebar.astro
interface SidebarItem {
  title: string;
  href?: string;
  items?: SidebarItem[];
}

interface Props {
  items: SidebarItem[];
  title?: string;
  class?: string;
}

const { items, title, class: className = '' } = Astro.props;
---

<aside 
  class:list={['w-64 shrink-0', className]}
  role="complementary"
  aria-label={title || 'サイドナビゲーション'}
>
  {title && (
    <h3 class="mb-3 font-semibold text-lg" id="sidebar-title">
      {title}
    </h3>
  )}
  
  <nav aria-labelledby="sidebar-title">
    <ul class="menu bg-base-200 w-full rounded-box">
      {items.map((section, index) => (
        <li>
          {section.title && (
            <h4 class="menu-title" id={`section-${index}-title`}>
              {section.title}
            </h4>
          )}
          
          {section.items && (
            <ul aria-labelledby={`section-${index}-title`}>
              {section.items.map((item) => (
                <li>
                  <a 
                    href={item.href}
                    class="hover:bg-base-300 transition-colors"
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>
</aside>
