---
// Sidebar.astro
interface SidebarItem {
  title: string;
  href?: string;
  items?: SidebarItem[];
}

interface Props {
  items: SidebarItem[];
  title?: string;
  class?: string;
}

const { items, title, class: className = '' } = Astro.props;
---

<aside 
  class:list={['w-64 shrink-0', className]}
  role="complementary"
  aria-label={title || 'サイドナビゲーション'}
>
  {title && (
    <h3 class="mb-3 font-semibold text-lg" id="sidebar-title">
      {title}
    </h3>
  )}
  
  <nav aria-labelledby="sidebar-title">
    <ul class="bg-gray-50 rounded-lg p-2 w-full">
      {items.map((section, index) => (
        <li class="mb-2">
          {section.title && (
            <h4 
              class="text-sm font-medium text-gray-500 uppercase tracking-wider px-3 py-2" 
              id={`section-${index}-title`}
            >
              {section.title}
            </h4>
          )}
          
          {section.items && (
            <ul aria-labelledby={`section-${index}-title`} class="space-y-1">
              {section.items.map((item) => (
                <li>
                  <a 
                    href={item.href}
                    class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-200 hover:text-gray-900 transition-colors"
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          )}
        </li>
      ))}
    </ul>
  </nav>
</aside>
