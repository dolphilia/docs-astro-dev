---
interface Props {
  variant?: 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error' | 'ghost' | 'link' | 'outline';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  class?: string;
  [key: string]: any;
}

const {
  variant = 'primary',
  size = 'md',
  class: additionalClass = '',
  ...rest
} = Astro.props;

// リンクスタイルの場合は一部のスタイルを適用しない
const isLink = variant === 'link';

const classes = [
  'btn',
  `btn-${variant}`,
  !isLink && `btn-${size}`,
  additionalClass,
];
---

{rest.href ? (
  <a class:list={classes} {...rest}>
    <slot />
  </a>
) : (
  <button class:list={classes} {...rest}>
    <slot />
  </button>
)}

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    border-radius: 0.375rem;
    transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out;
  }

  .btn:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(0, 0, 0, 0.1), 0 0 0 4px rgba(59, 130, 246, 0.5);
  }

  /* サイズバリエーション */
  .btn-xs {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
  }

  .btn-sm {
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
  }

  .btn-md {
    font-size: 1rem;
    padding: 0.5rem 1rem;
  }

  .btn-lg {
    font-size: 1.125rem;
    padding: 0.625rem 1.25rem;
  }

  /* カラーバリエーション */
  .btn-primary {
    background-color: #2563eb;
    color: white;
  }
  .btn-primary:hover {
    background-color: #1d4ed8;
  }

  .btn-secondary {
    background-color: #4b5563;
    color: white;
  }
  .btn-secondary:hover {
    background-color: #374151;
  }

  .btn-accent {
    background-color: #8b5cf6;
    color: white;
  }
  .btn-accent:hover {
    background-color: #7c3aed;
  }

  .btn-info {
    background-color: #0ea5e9;
    color: white;
  }
  .btn-info:hover {
    background-color: #0284c7;
  }

  .btn-success {
    background-color: #22c55e;
    color: white;
  }
  .btn-success:hover {
    background-color: #16a34a;
  }

  .btn-warning {
    background-color: #f59e0b;
    color: white;
  }
  .btn-warning:hover {
    background-color: #d97706;
  }

  .btn-error {
    background-color: #ef4444;
    color: white;
  }
  .btn-error:hover {
    background-color: #dc2626;
  }

  .btn-ghost {
    background-color: transparent;
    color: #4b5563;
  }
  .btn-ghost:hover {
    background-color: #f3f4f6;
    color: #1f2937;
  }

  .btn-link {
    background-color: transparent;
    color: #2563eb;
    padding: 0;
  }
  .btn-link:hover {
    color: #1d4ed8;
    text-decoration: underline;
  }

  .btn-outline {
    background-color: transparent;
    border: 1px solid currentColor;
    color: #4b5563;
  }
  .btn-outline:hover {
    background-color: #f3f4f6;
  }
</style>
